<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-inline' } do |f| %>

<label style="display: <%= "#{@user.errors.any? ? 'none' : 'block'}" %>; text-align:center;"></label>

<% if @user.errors.any? %>
	<div class="alert alert-error">Please enter a valid email</div>
<% end %>

<div class="input-prepend"><span class="add-on"><i class="icon-envelope"></i></span>
	<%= f.text_field :email, :placeholder => 'Your email address...', :style => "max-width:100%;"%>
</div>
<%= f.submit "Notify Me", :class => "btn btn-primary", :id => 'invitation_button' %>
<p class="help-block" style="margin-top:-0px;">No spam. Just a heads up when we're ready for you.</p>

<% end %>
